{
    "id": "org.kde.spectacle",
    "runtime": "org.kde.Platform",
    "runtime-version": "6.7",
    "sdk": "org.kde.Sdk",
    "command": "spectacle",
    "rename-icon": "spectacle",
    "finish-args": [
        "--socket=x11",
        "--share=network",
        "--share=ipc",
        "--device=dri",
        "--filesystem=xdg-pictures",
        "--talk-name=org.kde.kglobalaccel",
        "--talk-name=org.kde.plasmashell",
        "--talk-name=org.kde.KWin",
        "--talk-name=org.freedesktop.FileManager1"
    ],
    "cleanup": [
        "/include",
        "/lib/cmake",
        "/share/man",
        "/share/doc",
        "/share/qlogging-categories5"
    ],
    "modules": [
        {
            "name": "kColorPicker",
            "buildsystem": "cmake-ninja",
            "config-opts": [
                "-DBUILD_EXAMPLE=OFF",
                "-DBUILD_TESTS=OFF",
                "-DBUILD_SHARED_LIBS=ON",
                "-DBUILD_WITH_QT6=true"
            ],
            "sources": [
                {
                    "type": "git",
                    "url": "https://github.com/ksnip/kColorPicker.git",
                    "tag": "v0.3.1",
                    "x-checker-data": {
                        "type": "git",
                        "tag-pattern": "^v([\\d.]+)$"
                    },
                    "commit": "522e38b61e0786b97b2114c273a4551c869335be"
                }
            ]
        },
        {
            "name": "KPipeWire",
            "buildsystem": "cmake-ninja",
            "config-opts": [
                "-DBUILD_TESTING=OFF"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://download.kde.org/stable/plasma/6.2.1/kpipewire-6.2.1.tar.xz",
                    "sha256": "1675e2f06e20661a5d77400533d552a32a2d6dcc2d9eda02bca8e5adbbc243c8",
                    "x-checker-data": {
                        "type": "anitya",
                        "project-id": 8761,
                        "stable-only": true,
                        "url-template": "https://download.kde.org/stable/plasma/$version/kpipewire-$version.tar.xz"
                    }
                }
            ]
        },
        {
            "name": "layer-shell-qt",
            "buildsystem": "cmake-ninja",
            "config-opts": [
                "-DBUILD_TESTING=OFF"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://download.kde.org/stable/plasma/6.2.1/layer-shell-qt-6.2.1.tar.xz",
                    "sha256": "11e86d307f99e9a78697f4d0b4b11528e4a096228265dc66e58f299e6c397943",
                    "x-checker-data": {
                        "type": "anitya",
                        "project-id": 8761,
                        "stable-only": true,
                        "url-template": "https://download.kde.org/stable/plasma/$version/layer-shell-qt-$version.tar.xz"
                    }
                }
            ]
        },
        {
            "name": "opencv",
            "buildsystem": "cmake-ninja",
            "builddir": true,
            "config-opts": [
                "-DCMAKE_BUILD_TYPE=Release",
                "-DOPENCV_GENERATE_PKGCONFIG=ON",
                "-DBUILD_LIST=tracking,dnn"
            ],
            "cleanup": [
                "/bin"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://github.com/opencv/opencv/archive/4.10.0.tar.gz",
                    "sha256": "b2171af5be6b26f7a06b1229948bbb2bdaa74fcf5cd097e0af6378fce50a6eb9",
                    "x-checker-data": {
                        "type": "anitya",
                        "project-id": 6615,
                        "stable-only": true,
                        "url-template": "https://github.com/opencv/opencv/archive/$version.tar.gz"
                    }
                },
                {
                    "type": "archive",
                    "url": "https://github.com/opencv/opencv_contrib/archive/4.10.0.tar.gz",
                    "sha256": "65597f8fb8dc2b876c1b45b928bbcc5f772ddbaf97539bf1b737623d0604cba1",
                    "x-checker-data": {
                        "type": "anitya",
                        "project-id": 6615,
                        "stable-only": true,
                        "url-template": "https://github.com/opencv/opencv_contrib/archive/$version.tar.gz"
                    }
                }
            ]
        },
        {
            "name": "spectacle",
            "buildsystem": "cmake-ninja",
            "sources": [
                {
                    "type": "archive",
                    "url": "https://download.kde.org/stable/release-service/24.08.2/src/spectacle-24.08.2.tar.xz",
                    "sha256": "3f90f8cfe3359ad94f5bb0025a9251805a092c5892cd2a891965c21a0984cbdf",
                    "x-checker-data": {
                        "type": "anitya",
                        "project-id": 8763,
                        "stable-only": true,
                        "url-template": "https://download.kde.org/stable/release-service/$version/src/spectacle-$version.tar.xz"
                    }
                }
            ]
        }
    ]
}
