{
    "id": "org.kde.spectacle",
    "runtime": "org.kde.Platform",
    "runtime-version": "6.7",
    "sdk": "org.kde.Sdk",
    "command": "spectacle",
    "rename-icon": "spectacle",
    "finish-args": [
        "--socket=x11",
        "--share=network",
        "--share=ipc",
        "--device=dri",
        "--filesystem=xdg-pictures",
        "--talk-name=org.kde.kglobalaccel",
        "--talk-name=org.kde.plasmashell",
        "--talk-name=org.kde.KWin",
        "--talk-name=org.freedesktop.FileManager1"
    ],
    "cleanup": [
        "/include",
        "/lib/cmake",
        "/share/man",
        "/share/doc",
        "/share/qlogging-categories5"
    ],
    "modules": [
        {
            "name": "kColorPicker",
            "buildsystem": "cmake-ninja",
            "config-opts": [
                "-DBUILD_EXAMPLE=OFF",
                "-DBUILD_TESTS=OFF",
                "-DBUILD_SHARED_LIBS=ON",
                "-DBUILD_WITH_QT6=true"
            ],
            "sources": [
                {
                    "type": "git",
                    "url": "https://github.com/ksnip/kColorPicker.git",
                    "tag": "v0.3.1",
                    "x-checker-data": {
                        "type": "git",
                        "tag-pattern": "^v([\\d.]+)$"
                    },
                    "commit": "522e38b61e0786b97b2114c273a4551c869335be"
                }
            ]
        },
        {
            "name": "KPipeWire",
            "buildsystem": "cmake-ninja",
            "config-opts": [
                "-DBUILD_TESTING=OFF"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://download.kde.org/stable/plasma/6.1.4/kpipewire-6.1.4.tar.xz",
                    "sha256": "ab116d56fd8a6b36da6b595f597cf4383d8ed171f8e625dca67b7a4645337134",
                    "x-checker-data": {
                        "type": "anitya",
                        "project-id": 8761,
                        "stable-only": true,
                        "url-template": "https://download.kde.org/stable/plasma/$version/kpipewire-$version.tar.xz"
                    }
                }
            ]
        },
        {
            "name": "layer-shell-qt",
            "buildsystem": "cmake-ninja",
            "config-opts": [
                "-DBUILD_TESTING=OFF"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://download.kde.org/stable/plasma/6.1.4/layer-shell-qt-6.1.4.tar.xz",
                    "sha256": "6239d2dc6bef5386b948ec2180202a18f75e23f37902c2d7410fb3811dfb3268",
                    "x-checker-data": {
                        "type": "anitya",
                        "project-id": 8761,
                        "stable-only": true,
                        "url-template": "https://download.kde.org/stable/plasma/$version/layer-shell-qt-$version.tar.xz"
                    }
                }
            ]
        },
        {
            "name": "spectacle",
            "buildsystem": "cmake-ninja",
            "sources": [
                {
                    "type": "archive",
                    "url": "https://download.kde.org/stable/release-service/24.08.0/src/spectacle-24.08.0.tar.xz",
                    "sha256": "8d37135c6edd62f09f5e6004bef947331466cf20fded79450500dc802dd1ad8c",
                    "x-checker-data": {
                        "type": "anitya",
                        "project-id": 8763,
                        "stable-only": true,
                        "url-template": "https://download.kde.org/stable/release-service/$version/src/spectacle-$version.tar.xz"
                    }
                }
            ]
        }
    ]
}
