{
    "id": "org.kde.spectacle",
    "runtime": "org.kde.Platform",
    "runtime-version": "5.15-22.08",
    "sdk": "org.kde.Sdk",
    "command": "spectacle",
    "rename-icon": "spectacle",
    "finish-args": [
        "--socket=x11",
        "--share=network",
        "--share=ipc",
        "--device=dri",
        "--filesystem=xdg-pictures",
        "--talk-name=org.kde.kglobalaccel",
        "--talk-name=org.kde.plasmashell",
        "--talk-name=org.kde.kwin",
        "--talk-name=org.freedesktop.FileManager1"
    ],
    "cleanup": [
        "/include",
        "/lib/cmake",
        "/share/man",
        "/share/doc",
        "/share/qlogging-categories5"
    ],
    "modules": [
        {
            "name": "kColorPicker",
            "buildsystem": "cmake-ninja",
            "config-opts": [
                "-DBUILD_EXAMPLE=OFF",
                "-DBUILD_TESTS=OFF",
                "-DBUILD_SHARED_LIBS=ON"
            ],
            "sources": [
                {
                    "type": "git",
                    "url": "https://github.com/ksnip/kColorPicker.git",
                    "tag": "v0.3.1",
                    "x-checker-data": {
                        "type": "git",
                        "tag-pattern": "^v([\\d.]+)$"
                    },
                    "commit": "522e38b61e0786b97b2114c273a4551c869335be"
                }
            ]
        },
        {
            "name": "KPipeWire",
            "buildsystem": "cmake-ninja",
            "config-opts": [
                "-DBUILD_TESTING=OFF"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://download.kde.org/stable/plasma/6.1.2/kpipewire-6.1.2.tar.xz",
                    "sha256": "250f505d723fb71fdfb5af5f89e4f878f632c534fb2b01ba0bbb3ac19170d571",
                    "x-checker-data": {
                        "type": "anitya",
                        "project-id": 8761,
                        "stable-only": true,
                        "url-template": "https://download.kde.org/stable/plasma/$version/kpipewire-$version.tar.xz"
                    }
                }
            ]
        },
        {
            "name": "spectacle",
            "buildsystem": "cmake-ninja",
            "sources": [
                {
                    "type": "archive",
                    "url": "https://download.kde.org/stable/release-service/24.05.1/src/spectacle-24.05.1.tar.xz",
                    "sha256": "87d1fefc927038a2150eb9bf527b4a3f8f8e8e7db8df0be5fa64f9a7a676820c",
                    "x-checker-data": {
                        "type": "anitya",
                        "project-id": 8763,
                        "stable-only": true,
                        "url-template": "https://download.kde.org/stable/release-service/$version/src/spectacle-$version.tar.xz"
                    }
                }
            ]
        }
    ]
}
